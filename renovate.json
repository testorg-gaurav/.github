{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["patch", "minor", "major"],
      "matchSecurityUpdates": true,
      "enabled": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
